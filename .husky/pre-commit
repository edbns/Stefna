#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 [Pre-Commit Hook] Running basic safety checks..."

# Check TypeScript compilation
echo "📋 Checking TypeScript compilation..."
npx tsc --noEmit

if [ $? -eq 0 ]; then
    echo "✅ [Pre-Commit Hook] TypeScript compilation successful!"
else
    echo "❌ [Pre-Commit Hook] TypeScript compilation failed!"
    echo "🚨 Cannot commit - fix TypeScript issues first!"
    exit 1
fi

# Check ESLint
echo "📋 Running ESLint..."
npx eslint . --ext .ts,.tsx --max-warnings 0

if [ $? -eq 0 ]; then
    echo "✅ [Pre-Commit Hook] ESLint passed!"
else
    echo "❌ [Pre-Commit Hook] ESLint failed!"
    echo "🚨 Cannot commit - fix linting issues first!"
    exit 1
fi

echo "🎉 [Pre-Commit Hook] All checks passed! Safe to commit."
exit 0
