#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” [Pre-Commit Hook] Running basic safety checks..."

# Check TypeScript compilation
echo "ğŸ“‹ Checking TypeScript compilation..."
npx tsc --noEmit

if [ $? -eq 0 ]; then
    echo "âœ… [Pre-Commit Hook] TypeScript compilation successful!"
else
    echo "âŒ [Pre-Commit Hook] TypeScript compilation failed!"
    echo "ğŸš¨ Cannot commit - fix TypeScript issues first!"
    exit 1
fi

# Check ESLint
echo "ğŸ“‹ Running ESLint..."
npx eslint . --ext .ts,.tsx --max-warnings 0

if [ $? -eq 0 ]; then
    echo "âœ… [Pre-Commit Hook] ESLint passed!"
else
    echo "âŒ [Pre-Commit Hook] ESLint failed!"
    echo "ğŸš¨ Cannot commit - fix linting issues first!"
    exit 1
fi

echo "ğŸ‰ [Pre-Commit Hook] All checks passed! Safe to commit."
exit 0
