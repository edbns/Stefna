#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” [Pre-Commit Hook] Running basic safety checks..."

# Check if Prisma schema is valid
echo "ğŸ“‹ Validating Prisma schema..."
npx prisma validate

if [ $? -eq 0 ]; then
    echo "âœ… [Pre-Commit Hook] Prisma schema is valid!"
else
    echo "âŒ [Pre-Commit Hook] Prisma schema validation failed!"
    echo "ğŸš¨ Cannot commit - fix schema issues first!"
    exit 1
fi

# Check if Prisma client is up to date
echo "ğŸ“‹ Checking Prisma client..."
npx prisma generate

if [ $? -eq 0 ]; then
    echo "âœ… [Pre-Commit Hook] Prisma client is up to date!"
else
    echo "âŒ [Pre-Commit Hook] Prisma client generation failed!"
    echo "ğŸš¨ Cannot commit - fix Prisma issues first!"
    exit 1
fi

echo "ğŸ‰ [Pre-Commit Hook] All checks passed! Safe to commit."
exit 0
